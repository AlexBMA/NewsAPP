<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:textColor="@color/textOnPage"
        android:textSize="24sp"
        tools:text="Article title" />

    <TextView
        android:id="@+id/article_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_title"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/textOnPage"
        android:textSize="16sp"
        tools:text="Article date"
        />

    <TextView
        android:id="@+id/article_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/article_date"
        android:layout_toEndOf="@id/article_date"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/textOnPage"
        android:textSize="16sp"
        tools:text="by Article author" />

    <TextView
        android:id="@+id/article_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/article_date"
        android:layout_toEndOf="@id/article_author"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/textOnPage"
        android:textSize="16sp"
        tools:text="section" />

    <TextView
        android:id="@+id/article_quick_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_author"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:textColor="@color/textOnPage"
        android:textSize="16sp"
        tools:text="quick text" />
    <!--
        <ImageView
            android:id="@+id/article_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_quick_text" />
    -->

</RelativeLayout>

